# AI/LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
HUGGINGFACE_API_TOKEN=hf_your-huggingface-token-here
COHERE_API_KEY=your-cohere-api-key-here
REPLICATE_API_TOKEN=r8_your-replicate-token-here

# Google Cloud Services
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Azure Services
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Weather and Climate APIs
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHERAPI_KEY=your-weatherapi-key
CLIMATE_DATA_API_KEY=your-climate-data-api-key

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/climate_db
REDIS_URL=redis://localhost:6379/0
MONGODB_URI=mongodb://localhost:27017/climate_intelligence

# Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
WEAVIATE_URL=http://localhost:8080
QDRANT_URL=http://localhost:6333

# External Data Sources
NASA_API_KEY=your-nasa-api-key
NOAA_API_TOKEN=your-noaa-token
WORLD_BANK_API_KEY=your-world-bank-key
CARBON_INTERFACE_API_KEY=your-carbon-interface-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_GATEWAY=http://localhost:9091
GRAFANA_API_KEY=your-grafana-api-key

# Application Configuration
APP_NAME=Climate Intelligence Platform
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=0.0.0.0
PORT=12000
WORKERS=4
RELOAD=true

# Security
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Feature Flags
ENABLE_REAL_TIME_DATA=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXTERNAL_APIS=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Upload
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=["pdf", "docx", "txt", "md", "csv", "xlsx"]

# Deployment
ENVIRONMENT=development
DOCKER_IMAGE_TAG=latest
KUBERNETES_NAMESPACE=climate-intelligence